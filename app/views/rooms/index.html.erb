<h1>Listing rooms</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Status</th>
    <th>Color</th>
    <th>Capacity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @rooms.each do |room| %>
  <tr>
    <td><%= room.price %></td>
    <td><%= room.status %></td>
    <td><%= room.color %></td>
    <td><%= room.capacity %></td>
    <td><%= link_to 'Show', room %></td>
    <td><%= link_to 'Edit', edit_room_path(room) %></td>
    <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

