<h1>Listing games</h1>

<table>
  <tr>
    <th>Room</th>
    <th>Status</th>
    <th>B pattern</th>
    <th>I pattern</th>
    <th>N pattern</th>
    <th>G pattern</th>
    <th>O pattern</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%= game.room %></td>
    <td><%= game.status %></td>
    <td><%= game.b_pattern %></td>
    <td><%= game.i_pattern %></td>
    <td><%= game.n_pattern %></td>
    <td><%= game.g_pattern %></td>
    <td><%= game.o_pattern %></td>
    <td><%= link_to 'Show', game %></td>
    <td><%= link_to 'Edit', edit_game_path(game) %></td>
    <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

