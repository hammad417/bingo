<div class="span5 offset3">
  <h2>Forgot your password?</h2>
</div>
<div class="well span5 offset3 remove-padding">
  <div class="list-profile list-group list-group-flush">
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
      <div class="list-group-item">
        <div class="list-group-item-heading heading"><%= f.label :email %></div>
        <div class="text-fields"><%= f.text_field :email, :autofocus => true %></div>
        <div class='clearfix'></div>
          <div class=" list-group-item  signin-button">
            <%= f.submit "Send me reset password instructions", :class=>"btn btn-success btn-large full-btn" %>
          </div>  
          <div class='clearfix'></div>

          <div class=" list-group-item signin-button">
            <%= link_to "Sign in", new_session_path(resource_name), :class=>"btn btn-primary btn-large full-btn" %>
          </div>
          <div class='clearfix'></div>
          
          <div class=" list-group-item  signup-button">
            <%= link_to "Sign up", new_registration_path(resource_name), :class=>"btn btn-inverse btn-large full-btn" %>
          </div>
      </div>  
    <% end %>
  </div>
</div>    